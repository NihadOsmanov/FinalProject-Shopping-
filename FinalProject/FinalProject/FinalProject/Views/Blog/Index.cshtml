
@{
    ViewData["Title"] = "Index";
    List<Blog> blogs = Model;
}

<!--Bredcrum start-->
<section class="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="breadcrumb-section">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="page-title">
                                <h2>Blog</h2>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <nav class="theme-breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a asp-controller="Home" asp-action="Index">Home </a>
                                    </li>
                                    <li class="breadcrumb-item active">Blog</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Bredcrumb end-->
<!--Blog start-->
<section class="blog-page">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 col-lg-8 col-md-7">
                @foreach (var blog in blogs)
                {
                    <div class="row blog-detail">
                        <div class="col-xl-6">
                            <div class="blog-left">
                                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">
                                    <img src="./img/Blog/@blog.Image" alt="blog-1" />
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="blog-right">
                                <h6>@blog.Date.ToString("dd MMMM yyyy")</h6>
                                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">
                                    <h4>
                                        @blog.Title
                                    </h4>
                                </a>
                                <ul class="post-social">
                                    <li>Posted By : @blog.Posted</li>
                                    <li><i class="fa fa-comments"></i> @blog.Comments.Count Comment</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                }
            </div>
            <div class="col-xl-3 col-lg-4 col-md-5">
                <div class="blog-sidebar">
                    <div class="theme-card">
                        <h4>Recent Blog</h4>
                        <ul class="recent-blog">
                            @foreach (var blog in blogs)
                            {
                                <li>
                                    <div class="media">
                                        <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">
                                        <img src="./img/Blog/@blog.Image" alt="" />
                                        </a>
                                        <div class="media-body align-self-center">
                                            <h6>@blog.Date.ToString("dd MMMM yyyy")</h6>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Blog end-->
