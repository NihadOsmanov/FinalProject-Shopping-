
@{
    ViewData["Title"] = "Detail";
    ShopDetailViewModel shopDetailViewModel = Model;
}

<!--Bredcrum start-->
<section class="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="breadcrumb-section">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="page-title">
                                <h2>Product</h2>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <nav class="theme-breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a asp-controller="Home" asp-action="Index">Home </a>
                                    </li>
                                    <li class="breadcrumb-item active">Product</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Bredcrumb end-->
<!--Products start-->
<section class="products">
    <div class="collection-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="slider-for">
                        <div class="product1">

                            <img src="~/img/product/@shopDetailViewModel.ProductDetail.Product.Image"
                                 id="main"
                                 alt="product1" />
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="product-right product-description-box">
                        <h2>@shopDetailViewModel.ProductDetail.Product.Name</h2>
                        <div class="border-product">
                            <h6 class="product-title">product details</h6>
                            <p>
                                @shopDetailViewModel.ProductDetail.Detail
                            </p>
                        </div>
                        <div class="single-product-tables border-product detail-section">
                            <table>
                                <tbody>
                                    <tr>
                                        <td>Febric:</td>
                                        <td>@shopDetailViewModel.ProductDetail.Febric</td>
                                    </tr>
                                    <tr>
                                        <td>Color:</td>
                                        <td>@shopDetailViewModel.ProductDetail.Color</td>
                                    </tr>
                                    <tr>
                                        <td>Material:</td>
                                        <td>@shopDetailViewModel.ProductDetail.Material</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="border-product">
                            <h6 class="product-title">100% SECURE PAYMENT</h6>
                            <div class="payment-card-bottom">
                                <ul>
                                    <li>
                                        <a><img src="~/img/visa.png" alt="visa" /></a>
                                    </li>
                                    <li>
                                        <a>
                                            <img src="~/img/mastercard.png" alt="mastercard" />
                                        </a>
                                    </li>
                                    <li>
                                        <a><img src="~/img/paypal.png" alt="paypal" /></a>
                                    </li>
                                    <li>
                                        <a>
                                            <img src="~/img/american-express.png"
                                                 alt="american-express" />
                                        </a>
                                    </li>
                                    <li>
                                        <a><img src="~/img/discover.png" alt="discover" /></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="product-right product-form-box">
                        <h4>
                            <del class="ng-star-inserted">$@shopDetailViewModel.ProductDetail.Product.Price</del>
                        </h4>
                        <h3>$@((Convert.ToDouble(shopDetailViewModel.ProductDetail.Product.Price) * shopDetailViewModel.ProductDetail.Product.Discount) /100)</h3>
                        <div class="product-description border-product">
                            <h6 class="product-title size-text ng-star-inserted">
                                select size
                            </h6>
                            <div class="size-box ng-star-inserted">
                                <ul>
                                    @foreach (var size in shopDetailViewModel.ProductDetail.Product.ProductSizes)
                                    {
                                            <li class="ng-star-inserted">
                                                <a>@size.Size.Name</a>
                                            </li>
                                    }

                                </ul>
                            </div>
                        </div>
                        <div class="product-buttons">
                            <button class="btn-add-cart" id="AddBasket" style="cursor: pointer">Add to Cart</button>
                            <input hidden id="ProductId" value="@shopDetailViewModel.ProductDetail.Product.Id" />
                        </div>
                    </div>
                </div>
            </div>
            <!--Tab Product start-->
            <section class="tab-product m-0">
                <div class="row">
                    <div class="col-sm-12 col-lg-12">
                        <ul class="justify-content-start nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link" id="ngb-tab-3" style="cursor:pointer; color: #ec6356; border-bottom: 2px solid #ec6356">Description</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="ngb-tab-4" style="cursor:pointer;">Video</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-panel" id="ngb-tab-3-panel">
                                <p>
                                    It is a long established fact that a reader will be
                                    distracted by the readable content of a page when
                                    looking at its layout. The point of using Lorem Ipsum is
                                    that it has a more-or-less normal distribution of
                                    letters,It is a long established fact that a reader will
                                    be distracted by the readable content of a page when
                                    looking at its layout. The point of using Lorem Ipsum is
                                    that it has a more-or-less normal distribution of
                                    letters.
                                </p>
                            </div>
                            <div class="tab-panel"
                                 id="ngb-tab-4-panel"
                                 style="display: none">
                                <div class="mt-3 text-center">
                                    <iframe width="560"
                                            height="315"
                                            src="https://www.youtube.com/embed/BUWzX78Ye_8"
                                            allow="autoplay; encrypted-media"
                                            allowfullscreen=""></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--Tab Product end-->
        </div>
    </div>
</section>
<!--Products end-->
