
@model ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
}

<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row" style="justify-content: center">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Login</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="form-group" style=" margin-top: 10px;">
                                    <input asp-for="NewPassword" placeholder="NewPassword" style=" width: 100%; padding: 10px; margin-bottom: 10px; border-radius: 5px; border: 1px solid;">
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group" style="margin-top: 10px;">
                                    <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" style=" width: 100%; padding: 10px; margin-bottom: 10px; border-radius: 5px; border: 1px solid;">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="button-box" style="margin-top: 10px; margin-top: 0px; width: 15%; padding: 10px; border: 1px solid; border-radius: 5px;">
                                    <button type="submit" class="default-btn" style="margin-top: 0px">Sign In</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

