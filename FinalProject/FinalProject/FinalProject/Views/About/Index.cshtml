
@{
    ViewData["Title"] = "Index";
    AboutViewModel aboutViewModel = Model;  
}

<!--Bredcrum start-->
<section class="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="breadcrumb-section">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="page-title">
                                <h2>About</h2>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <nav class="theme-breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a href="./index.html">Home </a>
                                    </li>
                                    <li class="breadcrumb-item active">About</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Bredcrumb end-->
<!--About start-->
<section class="about-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="banner-section">
                    <img src="~/img/@aboutViewModel.About.Image"
                         alt="about-us"
                         class="img-fluid" />
                </div>
            </div>
            <div class="col-sm-12">
                <h4>
                    @aboutViewModel.About.Title
                </h4>
                <p>
                    @aboutViewModel.About.Description
                </p>
                <p>
                    @aboutViewModel.About.SubDescription
                </p>
            </div>
        </div>
    </div>
</section>
<!--About end-->
<!--Testimonial start-->
<section class="testimonial">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="owl-carousel owl-theme owl-testimonial">
                    @foreach (var testimonial in aboutViewModel.Testimonials)
                    {
                        <div class="item">
                            <div class="media">
                                <div class="text-center">
                                    <img src="~/img/about/@testimonial.Image" alt="" />
                                    <h5>@testimonial.Name</h5>
                                    <h6>@testimonial.Profession</h6>
                                </div>
                                <div class="media-body">
                                    <p>
                                        @testimonial.Title
                                    </p>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!--Testimonial end-->
<!--Team start-->
<section class="team">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2>Our team</h2>
                <div class="tema-4">
                    <div class="owl-carousel owl-theme owl-team">
                        @foreach (var employee in aboutViewModel.Employees)
                        {
                            <div class="item">
                                <img src="~/img/about/@employee.Image" alt="team-1" />
                                <h4>@employee.Fullname</h4>
                                <h6>@employee.Profession</h6>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Team end-->
<!--Service start-->
@await Component.InvokeAsync("Service");
<!--Service end-->
