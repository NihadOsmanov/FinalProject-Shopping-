
@{
    ViewData["Title"] = "Index";
    List<Size> sizes = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body bg-dark font-weight-bold text-white">
                <p style="padding-bottom: 10px; text-align:center">
                    <a asp-action="Create" class="btn btn-outline-success" style="width: 160px">Create</a>
                </p>
                <h4 class="card-title text-white">Category</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-white">Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var size in sizes)
                            {
                                <tr>
                                    <td class="text-white">@size.Name</td>
                                    <td>
                                        <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@size.Id">Update</a>
                                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@size.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

